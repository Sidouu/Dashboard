{% extends 'BOBackOfficeBundle::layout.html.twig' %}

{% block body -%}
    {% autoescape false %}
        <div class="dash-content-title title-green">
            <div id="navigation">
                <a href="{{ path('bo_back_office_homepage') }}">Home</a> > <a href="{{ path('piano') }}">Pianos</a> > <a href="{{ path('piano_show', { 'id': entity.id }) }}">Show</a>
            </div>
        </div>
        <div class="dash-content-body">
            <h1 class="title">Piano<span class="line line-green"></span></h1>
            <div class="unit unit-white">
                <table class="record_properties">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Customer</th>
                            <td>{{ entity.customer }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Brand</th>
                            <td>{{ entity.brand }}</td>
                        </tr>
                        <tr>
                            <th>Model</th>
                            <td>{{ entity.model }}</td>
                        </tr>
                        <tr>
                            <th>Number</th>
                            <td>{{ entity.number }}</td>
                        </tr>
                        <tr>
                            <th>Repairprice</th>
                            <td>{{ entity.repairPrice }}</td>
                        </tr>
                        <tr>
                            <th>Steelstrings</th>
                            <td>{{ entity.steelStrings }}</td>
                        </tr>
                        <tr>
                            <th>Spunstrings</th>
                            <td>{{ entity.spunStrings }}</td>
                        </tr>
                        <tr>
                            <th>Stringdate</th>
                            <td>{{ entity.stringDate|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Stringprice</th>
                            <td>{{ entity.stringPrice }}</td>
                        </tr>
                        <tr>
                            <th>Quotedate</th>
                            <td>{{ entity.quoteDate|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Repairdate</th>
                            <td>{{ entity.repairDate|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ entity.price }}</td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <a href="{{ path('piano_edit', { 'id': entity.id }) }}"><button class="btn-flat btn-flat-green">Edit</button></a>
            </div>
            <form action="{{ path('piano_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn-none"><i class="icon-remove icon-large"></i></button>
            </form>
        </div>
    {% endautoescape %}
{% endblock %}
