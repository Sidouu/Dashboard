{% extends 'BOBackOfficeBundle::layout.html.twig' %}

{% block body -%}
    {% autoescape false %}
        <div class="dash-content-title title-red">
            <div id="navigation">
                <a href="{{ path('customer') }}">Customers</a> > <a href="{{ path('customer_show', { 'id': entity.id }) }}">Show</a>
            </div>
        </div>
        <div class="dash-content-body">
            <h1 class="title">Customer<span class="line line-red"></span></h1>
            <div class="unit unit-white">
                <table class="record_properties">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ entity.lastName }}</td>
                        </tr>
                        <tr>
                            <th>Firstname</th>
                            <td>{{ entity.firstName }}</td>
                        </tr>
                        <tr>
                            <th>Nextvisit</th>
                            <td>{{ entity.nextVisit|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Tour</th>
                            <td>{{ entity.tour }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ entity.address }}</td>
                        </tr>
                        <tr>
                            <th>Locality</th>
                            <td>{{ entity.locality }}</td>
                        </tr>
                        <tr>
                            <th>Postalcode</th>
                            <td>{{ entity.postalCode }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ entity.city }}</td>
                        </tr>
                        <tr>
                            <th>Lastvisit</th>
                            <td>{{ entity.lastVisit|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Homephone</th>
                            <td>{{ entity.homePhone }}</td>
                        </tr>
                        <tr>
                            <th>Workphone</th>
                            <td>{{ entity.workPhone }}</td>
                        </tr>
                        <tr>
                            <th>Mobilephone</th>
                            <td>{{ entity.mobilePhone }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ entity.email }}</td>
                        </tr>
                        <tr>
                            <th>Job</th>
                            <td>{{ entity.job }}</td>
                        </tr>
                        <tr>
                            <th>Notes</th>
                            <td>{{ entity.notes }}</td>
                        </tr>
                        <tr>
                            <th>Piano</th>
                            <td>{{ entity.piano.name }}</td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <ul>
                    {% for bill in bills %}
                        <li><a href="{{ path('bill_show', { 'id': bill.id }) }}"><strong>Facture {{ bill.billNumber }} du {{ bill.createdDate|date('Y-m-d') }}</strong></a></li> |
                    {% endfor %}
                </ul>
                <hr>
                <a href="{{ path('customer_edit', { 'id': entity.id }) }}"><button class="btn-flat btn-flat-red">Edit</button></a>
            </div>
            <form action="{{ path('customer_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn-none"><i class="icon-remove icon-large"></i></button>
            </form>
        </div>
    {% endautoescape %}
{% endblock %}
