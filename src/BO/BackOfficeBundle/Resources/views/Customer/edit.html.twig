{% extends 'BOBackOfficeBundle::layout.html.twig' %}

{% block body -%}
    {% autoescape false %}
        <div class="dash-content-title title-red">
            <div id="navigation">
                <a href="{{ path('customer') }}">Customers</a> > <a href="{{ path('customer_edit', { 'id': entity.id }) }}">Edit</a>
            </div>
        </div>
        <div class="dash-content-body">
            <h1 class="title">Customer edit<span class="line line-red"></span></h1>
            <div class="unit unit-grey">
                <form action="{{ path('customer_update', { 'id': entity.id }) }}" method="post" class="f400" {{ form_enctype(edit_form) }}>
                    <input type="hidden" name="_method" value="PUT" />
                    {{ form_widget(edit_form) }}
                    <hr>
                    <div class="controls">
                        <button type="submit" class="btn-flat btn-flat-red">Edit</button>
                    </div>
                </form>
            </div>
            <form action="{{ path('customer_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn-none"><i class="icon-remove icon-large"></i></button>
            </form>
        </div>
    {% endautoescape %}
{% endblock %}