{% extends 'BOBackOfficeBundle::layout.html.twig' %}

{% block body -%}
    {% autoescape false %}
        <div class="dash-content-title title-red">
            <div id="navigation">
                <a href="{{ path('bo_back_office_homepage') }}">Home</a> > <a href="{{ path('customer') }}">Customers</a> > <a href="{{ path('customer_new') }}">Create</a>
            </div>
        </div>
        <div class="dash-content-body">
            <h1 class="title">Customer creation<span class="line line-red"></span></h1>
            <div class="unit unit-grey">
                <form action="{{ path('customer_create') }}" method="post" class="f400" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <div class="controls">
                        <button type="submit" class="btn-flat btn-flat-red">Create</button>
                    </div>
                </form>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}
